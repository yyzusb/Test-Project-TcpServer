#define _WINSOCK_DEPRECATED_NO_WARNINGS
#include <WinSock2.h>
#include <windows.h>
#include <stdio.h>
#include <stdlib.h>

int main(void){

	WORD ver = MAKEWORD(2, 2);
	WSADATA dat;
	WSAStartup(ver, &dat);

	//1、建立客户端socket
	SOCKET client = socket(AF_INET,SOCK_STREAM,0 );
	if (client == SOCKET_ERROR)
		printf("建立socket失败...\n");
	else
		printf("建立socket成功!\n");

	//2、连接服务器
	sockaddr_in _sin = {};
	_sin.sin_family = AF_INET;
	_sin.sin_port = htons(4567);
	_sin.sin_addr.S_un.S_addr = inet_addr("127.0.0.1");
	if (connect(client, (sockaddr*)&_sin, sizeof(_sin)) == INVALID_SOCKET)
		printf("连接服务器失败...\n");
	else
		printf("连接服务器成功\n");

	//3、接受服务器数据
	char msg_buf[256];
	recv(client, msg_buf, 256, 0);
	printf("接收到数据：%s\n", msg_buf);

	//4、关闭socket
	getchar();
	closesocket(client);

	WSACleanup();

	return 0;
}
